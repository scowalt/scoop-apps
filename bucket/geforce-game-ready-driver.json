    "architecture": {
        "64bit": {
            "url": "https://us.download.nvidia.com/Windows/527.56/527.56-desktop-win10-win11-64bit-international-dch-whql.exe",
            "hash": "17f74d97a2037096fdd771c9d1c2d838878d6dcb6b394b67608cc5d6e8b9f520",
            "installer": {
                "script": "Start-Process $dir\\$fname -ArgumentList \"-s -noreboot\" -wait; Remove-Item $dir\\$fname"
            },
            "uninstaller": {
                "script": "Write-Warning 'Uninstall is currently not implemented. See https://github.com/scowalt/scoop-apps/issues/4'"
            }
        }
    },
    "post_install": [
        "$null, $null2, $bucket = Get-Manifest($app)",
        "$bucketdir = Find-BucketDirectory($bucket)",
        "$bucketdir = $bucketdir.Trim()",
        "& \"$bucketdir\\scripts\\track.ps1\" install $app"
    ],
    "post_uninstall": [
        "$null, $null2, $bucket = Get-Manifest($app)",
        "$bucketdir = Find-BucketDirectory($bucket)",
        "$bucketdir = $bucketdir.Trim()",
        "& \"$bucketdir\\scripts\\track.ps1\" uninstall $app"
    ],
    "checkver": {
        "url": "https://gfwsl.geforce.com/services_toolkit/services/com/nvidia/services/AjaxDriverService.php?func=DriverManualLookup&psid=98&osID=57&languageCode=1033&beta=0&isWHQL=1&dltype=-1&dch=1&upCRD=0&sort1=0&numberOfResults=1",
        "regex": "\"Version\"\\s?:\\s?\"(?<version>[\\d.]+)\".*\"DownloadURL\"\\s?:\\s?\"https://us.download.nvidia.com/(?<path>[^\"]*)\""
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://us.download.nvidia.com/$matchPath"
            }
        }
    }
}
